<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/header_backgroud_cornar_radius">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lb_medum"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_header"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lb_eduction"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_10"
            android:textSize="@dimen/text_size_header"/>

    </LinearLayout>




<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/margin_20"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lb_user_name"
            android:textSize="@dimen/text_size"
            android:textColor="@color/header_backgroud"
            android:layout_marginTop="@dimen/margin_20"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etUsrName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your user name "
            android:theme="@style/EditText.GREEN"
            android:textSize="@dimen/text_size"
            android:layout_marginTop="@dimen/margin_10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lb_password"
            android:textSize="@dimen/text_size"
            android:textColor="@color/header_backgroud"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_20"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your password"
            android:theme="@style/EditText.GREEN"
            android:textSize="@dimen/text_size"
            android:inputType="textPassword"
            android:layout_marginTop="@dimen/margin_10"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btn_login"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_20"
            android:background="@drawable/login_button_background"
            android:textAllCaps="false"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>





</LinearLayout>